<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400.0" prefWidth="800.0" spacing="15.0" style="-fx-background-color: #3c783c;"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="stepperfx.controllers.ResultsController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Result">
        <font>
          <Font name="Trebuchet MS" size="14.0" />
        </font>
    </Label>

    <TextArea fx:id="resultArea" editable="false" prefHeight="230.0" prefWidth="200.0"
              style="-fx-background-color: #3c643c; -fx-control-inner-background: #3c643c; -fx-text-fill: gray;"
              translateY="-10.0" wrapText="true" />

    <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0" spacing="15" translateY="-10">

        <Button fx:id="pageBackwardButton" onAction="#setPreviousPage" mnemonicParsing="false" prefWidth="120.0"
                style="-fx-background-color: #3c843c;" text="&lt;&lt;&lt; Previous Page">
            <font>
                <Font name="Trebuchet MS" size="12.0" />
            </font>
        </Button>

        <Button fx:id="pageForwardButton" onAction="#setNextPage" mnemonicParsing="false" prefWidth="120.0"
                style="-fx-background-color: #3c843c;" text="Next Page &gt;&gt;&gt;">
           <font>
               <Font name="Trebuchet MS" size="12.0" />
           </font>
        </Button>

        <Button fx:id="copyButton" onAction="#copyResult" mnemonicParsing="false"
                style="-fx-background-color: #3c843c;" text="Copy Result">
            <font>
                <Font name="Trebuchet MS" size="12.0" />
            </font>
        </Button>

        <Label fx:id="pageDisplayText" text="Page 420 of 69">
            <font>
                <Font name="Trebuchet MS" size="12.0" />
            </font>
        </Label>

    </HBox>

    <Label text="Key">
        <font>
          <Font name="Trebuchet MS" size="14.0" />
        </font>
    </Label>

    <TextArea fx:id="keyArea" editable="false" prefHeight="120" prefWidth="200.0"
              style="-fx-background-color: #3c643c; -fx-control-inner-background: #3c643c; -fx-text-fill: gray;"
              translateY="-10.0" wrapText="true" />

    <Button defaultButton="true" onAction="#setLoginScreen" mnemonicParsing="false"
            style="-fx-background-color: #3c943c;" text="Return to Login">
      <font>
         <Font name="Trebuchet MS" size="14.0" />
      </font>
    </Button>

</VBox>
